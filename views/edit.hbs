<main>
    <h1>Edit</h1>
    <div class="form">
        <form action='/edit/{{car._id}}' method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{car.name}}">
            <label for="name">Description</label>
            <textarea id="name" name="description">{{car.description}}</textarea>
            <label for="image">ImageUrl</label>
            <input type="text" id="image" name="imageUrl" value="{{car.imageUrl}}">
            <label for="price">Price</label>
            <input type="text" name="price" value="{{car.price}}">
            <input type="submit" value="Edit">
        </form>
    </div>
</main>